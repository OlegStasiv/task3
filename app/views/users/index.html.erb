<h4>Listing Users</h4>

<table class=" table table-striped" data-sort-name="name" data-sort-order="desc">
  <thead>
  <tr>
    <th data-field="index" data-sortable="true">#</th>
    <th data-field="name" data-sortable="true">Name</th>
    <th data-field="email" data-sortable="true">Email</th>
    <th data-field="friend" data-sortable="true">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index+1  %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Add to friends", friendships_create_path(:friend_id => user) %></td>
      </tr>
  <% end %>
  </tbody>
</table>