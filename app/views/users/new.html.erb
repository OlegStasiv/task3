<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<%= render partial: "shared/error_messages", flash: flash %>

<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>

    <div class="form-group">
      <%= f.label :name, "Name:", class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email:", class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:", class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm password:", class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>




    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
<% end %>

